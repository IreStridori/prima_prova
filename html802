    <form action="/motif" method="post">
        <input type="text" name="known_motif" placeholder="Enter motif (e.g., TATA)">
        <button type="submit">Search</button>
    </form>

    <h2>Find Recurring Motifs</h2>
    <form action="/motif" method="post">
        <p>Sequence Index: <input type="number" name="seq_index" min="0" required></p>
        <p>Motif Length: <input type="number" name="motif_length" min="1" required></p>
        <p>Minimum Occurrences: <input type="number" name="min_occurrences" min="1" required></p>
        <button type="submit">Find Motifs</button>
    </form>

    {% if results %}
    <h2>Results:</h2>
    <pre>{{ results }}</pre>
    {% endif %}

    <p>
        <a href="/stats">Back to Statistics</a> |
